  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- @categories from Controller index method -->
      <!-- to check what @categories is : <%# raise @sales.inspect %> >>> shows error message <ActiveRecord::Relation []> meaning it's an array -->
      <!-- <%#= render @categories %> == <%# @sales.each do |s| %> 
                                          <%#= render 'sale', sale: s %> render partial 'sale' and pass in local variable sale: s -->
      <%= render @categories %>
    </tbody>
  </table>


</section>